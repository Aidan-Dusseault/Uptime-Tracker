<h1>Sign in</h1>
<%= form_for(:session, :url => sessions_path) do |f| %>
<%= render 'shared/error_messages', :object => f.object %>
	<div class="field">
		<%= f.label :username %><br />
		<%= f.text_field :username %>
	</div>
	<div class = "field">
		<%= f.label :password %>
		<%= f.password_field :password %>
	</div>
	<div class="actions">
		<%= f.submit "Sign in" %>
	</div>
<% end %>

<p>New user? <%= link_to "Sign up now!", signup_path %></p>